{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tag",
  "type": "object",
  "required": ["name", "type"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the tag"
    },
    "type": {
      "type": "string",
      "enum": [
        "category",
        "concept",
        "skill_level",
        "ue_feature",
        "issue_type"
      ],
      "description": "Classification type of the tag"
    },
    "relatedQueries": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs of user queries associated with this tag"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the tag"
    },
    "parentTag": {
      "type": "string",
      "description": "Parent tag for hierarchical organization"
    }
  }
}
