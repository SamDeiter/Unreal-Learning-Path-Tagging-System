{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LearningPath",
  "type": "object",
  "required": ["id", "title", "steps"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the learning path"
    },
    "title": {
      "type": "string",
      "description": "Display title for the path"
    },
    "description": {
      "type": "string",
      "description": "Overview of what this path teaches"
    },
    "requiredTags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags that trigger this learning path"
    },
    "estimatedDuration": {
      "type": "string",
      "description": "Total time to complete the path"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["order", "title"],
        "properties": {
          "order": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "resourceUrl": { "type": "string" },
          "resourceType": {
            "type": "string",
            "enum": ["documentation", "video", "tutorial", "exercise"]
          },
          "duration": { "type": "string" }
        }
      }
    }
  }
}
