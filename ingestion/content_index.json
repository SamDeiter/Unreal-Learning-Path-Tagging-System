{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "0.1.0",
  "description": "Atomic content references for docs and video slices",
  "content_schema": {
    "required": ["content_id", "content_type", "title", "url"],
    "properties": {
      "content_id": {
        "type": "string",
        "description": "Unique identifier (yt:<video_id>#t=start-end or doc:<slug>#section=<id>)"
      },
      "content_type": {
        "type": "string",
        "enum": ["youtube_clip", "doc_section", "forum_thread"]
      },
      "title": { "type": "string" },
      "url": { "type": "string", "format": "uri" },
      "snippet": {
        "type": "string",
        "description": "Brief excerpt or summary"
      },
      "derived_tags": { "type": "array", "items": { "type": "string" } },
      "engine_versions": { "type": "array", "items": { "type": "string" } },
      "quality": {
        "signal_strength": { "type": "number", "minimum": 0, "maximum": 1 },
        "freshness_date": { "type": "string", "format": "date" },
        "source_authority": {
          "type": "string",
          "enum": ["official", "community", "verified_creator"]
        }
      }
    }
  },
