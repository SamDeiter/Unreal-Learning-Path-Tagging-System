{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserQuery",
  "type": "object",
  "required": ["id", "queryText", "timestamp"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the query"
    },
    "queryText": {
      "type": "string",
      "description": "The user's original question or issue description"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the query was submitted"
    },
    "assignedTags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags assigned to this query"
    },
    "suggestedLearningPath": {
      "type": "string",
      "description": "ID of the recommended learning path"
    },
    "resolved": {
      "type": "boolean",
      "description": "Whether the query has been addressed"
    }
  }
}
